<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NameButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EC670"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="796dp"
        android:layout_height="221dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/HistoryApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/map_globe" />

    <TextView
        android:id="@+id/HistoryApp"
        android:layout_width="568dp"
        android:layout_height="91dp"
        android:layout_marginTop="292dp"
        android:fontFamily="@font/alfa_slab_one"
        android:text="MY HISTORY APP"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/TextNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ClearButton"
        android:layout_width="154dp"
        android:layout_height="57dp"
        android:text="Clear"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />

    <Button
        android:id="@+id/NextButton"
        android:layout_width="157dp"
        android:layout_height="46dp"
        android:background="#834040"
        android:text="Next"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/RandomizeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <Button
        android:id="@+id/RandomizeButton"
        android:layout_width="139dp"
        android:layout_height="52dp"
        android:background="#E91E63"
        android:text="Randomize"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/NextButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <TextView
        android:id="@+id/ResultTextView"
        android:layout_width="376dp"
        android:layout_height="144dp"
        android:text="Result"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />

    <EditText
        android:id="@+id/AgeTextView"
        android:layout_width="159dp"
        android:layout_height="81dp"
        android:ems="10"
        android:inputType="text"
        android:text="Age:"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ClearButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.759" />

</androidx.constraintlayout.widget.ConstraintLayout>